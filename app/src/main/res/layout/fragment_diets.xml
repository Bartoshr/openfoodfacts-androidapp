<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diets_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        tools:listitem="@layout/item_diet"
        android:clipToPadding="false"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_navigation"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="15dp"
            android:layout_toStartOf="@id/bottom_navigation"
            android:clickable="true"
            android:focusable="true"
            android:tint="@android:color/white"
            fab:backgroundTint="@color/blue"
            fab:fabSize="normal"
            fab:srcCompat="@drawable/plus" android:layout_alignParentRight="true" android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/bottom_navigation"/>

    <include layout="@layout/navigation_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        />

</RelativeLayout>

